{
    "reportName": "setup_c2_vcf_test",
    "saveReport": true,
    "txt_label": "set up VCF (combined variants) data",
    "toPrint": true,

    "load_files": true,
    "fext": ".pass.combined.vcf",

    "load_data_csv_kwargs":{
        "sep": "\t",
        "header": 0,
        "index_col": 0,
        "comment": "#",
        "names": "chr,pos,id_header,ref,alt,qual,filter,info,format,sample_blood,sample_ffpe"
    },

    "editWith": "VCF",
    "withFilter": false,
    "withProcess": false,

    "edit_kwargs": {
        "removeLOW": true,
        "LOW_value": -1,
        "function_dict": {
            "no mutation": 0,
            "missense": 1,
            "nonframeshiftInsertion": 2,
            "nonframeshiftDeletion": 2,
            "nonframeshiftIndel": 2,
            "nonsense": 3,
            "frameshiftDeletion": 4,
            "frameshiftInsertion": 4,
            "frameshiftIndel": 4
        },
        "mergeHow":"maxAll"
    },

    "split_patID": "_",
    "chr_col": "chr_int",
    "gene_id_col": "gene",
    "remove_patients": null,

    "plot_kwargs": {
        "cmap_custom": null,
        "vmin": 0,
        "vmax": 4,
        "highRes": false,
        "mincol": "white",
        "midcol": "orange",
        "maxcol": "red"
    },
    
    "input_directory": "input,headneck,cohort2",
    "oncoscan_directory": "variants_byNexus,combined",
    "oncoscan_files": "",

    "sample_info_read_csv_kwargs":{
        "sep": "\t",
        "header": 0,
        "index_col": 0
    },
    "sample_info_fname": "20180208_Oliver,clinical_data.csv",
    "sample_info_table_index_colname": "Patient",
    "sample_info_table_sortLabels": "Local_Control",
    
    "output_directory": "output,headneck",
    "DEBUG": true
}