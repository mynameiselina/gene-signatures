{
    "reportName": "setup_c1_oncoscan_filt_by_me",
    "saveReport": true,
    "txt_label": "set up raw Oncoscan data filtered by me",
    "toPrint": true,

    "load_files": true,
    "fext": "_events.txt",

    "load_data_csv_kwargs":{
        "sep": "\t",
        "header": 0,
        "index_col": null,
        "comment": "#",
        "names": null
    },

    "editWith": "Oncoscan",
    "withFilter": true,
    "withProcess": true,

    "preproc_kwargs": {
        "keep_columns": "Chromosome Region,Event,Gene Symbols",
        "new_columns": "chr,start,end,id,function"
    },
    "filt_kwargs": {
        "col_pValue":"Call PValue",
        "pValue_thres":0.01,
        "remove_missing_pValues": true,

        "col_probeMedian":"Probe Median",
        "probeMedian_thres":0.3,

        "col_probeCount":"Probes",
        "probeCount_thres":20
    },
    "edit_kwargs": {
        "function_dict": {
            "Homozygous Copy Loss": -4,
            "CN Loss": -2,
            "CN Gain": 2,
            "High Copy Gain": 4,
            "LOH": -1
        },
        "mergeHow":"maxAll",
        "removeLOH":true,
        "LOH_value": "LOH"
    },

    "plot_kwargs": {
        "highRes": false
    },

    "chr_col": "chr_int",
    "gene_id_col": "gene",
    
    "input_directory": "input,headneck,cohort1",
    "data_directory": "oncoscan,raw",
    "data_files": "DS_101,DS_107",

    "sample_info_read_csv_kwargs":{
        "sep": "\t",
        "header": 0,
        "index_col": 0,
        "col_as_index":"cnvID"
    },
    "sample_info_fname": "sample_info.txt",
    "sample_info_table_sortLabels": "Tcode,Ccode,patient",
    
    "output_directory": "output,headneck",
    "DEBUG": true
}